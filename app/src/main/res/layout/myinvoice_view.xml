<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E295">

    <View
        android:id="@+id/snack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/invoiceList"
        android:layout_width="match_parent"
        android:layout_height="613dp"
        android:layout_marginTop="150dp"
        android:onClick="btnRe" />

    <EditText
        android:id="@+id/editDayDate"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:textColor="#FF9800"
        android:textColorLink="#00E41010"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinnerDaySwitch"
        style="@style/Platform.Widget.AppCompat.Spinner"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="48dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:popupBackground="#B9C2E2" />

    <Button
        android:id="@+id/btntt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="304dp"
        android:layout_marginTop="96dp"
        android:text="@string/refresh" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="29dp"
        android:text="@string/engDate" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="135dp"
        android:text="@string/endSelect" />

</RelativeLayout>